        }
        else
        {
            // Handle errors here (e.g., show an error message)
        }
    }

    private async Task DropOutClub(Guid klubId)
    {
        // Send a DELETE request to remove the user from the club
        var response = await _apiClient.DeleteAsync($"api/brugerklub/{Guid.NewGuid()}/{klubId}");

        if (response.IsSuccessStatusCode)
        {
            // Remove the club from the list of user's clubs
            var klubToRemove = brugerDTO.Klubber.FirstOrDefault(k => k.KlubID == klubId);
            if (klubToRemove != null)
            {
                brugerDTO.Klubber.Remove(klubToRemove);
            }
        }
        else
        {
            // Handle errors (e.g., show an error message)
        }
    }
}

